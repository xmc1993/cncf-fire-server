<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cncf.dao.ArticleDao">

    <sql id="fields">
        articleId,
        title,
        publishTime,
        source,
        click,
        wordSize,
        categoryId,
        content,
        isTop,
        isRed,
        imgUrl,
        attachUrl
    </sql>

    <resultMap id="article" type="com.cncf.entity.Article">
        <id column="articleId" property="articleId"/>
        <id column="title" property="title"/>
        <id column="publishTime" property="publishTime"/>
        <id column="source" property="source"/>
        <id column="click" property="click"/>
        <id column="wordSize" property="wordSize"/>
        <id column="categoryId" property="categoryId"/>
        <id column="content" property="content"/>
        <id column="isTop" property="isTop"/>
        <id column="isRed" property="isRed"/>
        <id column="imgUrl" property="imgUrl"/>
        <id column="attachUrl" property="attachUrl"/>
    </resultMap>

    <delete id="deleteById">
        DELETE FROM article
        WHERE articleId = #{0}
    </delete>

    <insert id="insertArticle" parameterType="com.cncf.entity.Article" keyProperty="articleId"
            useGeneratedKeys="true">
        insert into article(
        <include refid="fields"></include>
        )
        VALUES
        (
        #{articleId},
        #{title},
        #{publishTime},
        #{source},
        #{click},
        #{wordSize},
        #{categoryId},
        #{content},
        #{isTop},
        #{isRed},
        #{imgUrl},
        #{attachUrl}
        )
    </insert>

    <select id="selectTitleById" resultType="java.lang.String">
        SELECT title
        FROM article
        WHERE articleId = #{0}
    </select>

    <select id="selectArticleById" resultType="com.cncf.entity.Article">
        SELECT
        <include refid="fields"></include>
        FROM article
        WHERE articleId = #{0}
    </select>

    <select id="selectAllArticle" resultType="com.cncf.entity.Article">
        SELECT
        <include refid="fields"></include>
        FROM article
    </select>

    <select id="selectArticleByCategoryAndPage" resultType="com.cncf.entity.Article">
        select
        <include refid="fields"></include>
        from article
        where categoryId = #{0}
        limit #{1},#{2}
        order by isTop desc,publishTime desc
    </select>

    <update id="updateTitleById" parameterType="com.cncf.entity.Article">
        UPDATE article
        SET
        title=#{1}
        WHERE articleId=#{0}
    </update>

    <update id="updateContentById" parameterType="com.cncf.entity.Article">
        UPDATE article
        SET
        content=#{1}
        WHERE articleId=#{0}
    </update>

    <update id="updateArticle" parameterType="com.cncf.entity.Article">
        UPDATE article
        <set>
        <if test="title!=null and title!=''">
            title = #{title},
        </if>
        <if test="source!=null and source!=''">
            source = #{source},
        </if>
        <if test="click!=null and click!=''">
            click = #{click},
        </if>
        <if test="wordSize!=null and wordSize!=''">
            wordSize = #{wordSize},
        </if>
        <if test="categoryId!=null and categoryId!=''">
            categoryId = #{categoryId},
        </if>
        <if test="content!=null and content!=''">
            content = #{content},
        </if>
        <if test="isTop!=null and isTop!=''">
            isTop = #{isTop},
        </if>
        <if test="isRed!=null and isRed!=''">
            isRed = #{isRed},
        </if>
        <if test="imgUrl!=null and imgUrl!=''">
            imgUrl = #{imgUrl},
        </if>
        <if test="attachUrl!=null and attachUrl!=''">
            attachUrl = #{attachUrl},
        </if>
        </set>
        WHERE articleId=#{0}
    </update>

</mapper>